<h1> Hello!</h1>

<ul class="list-group">

{{#each artArray}}

<div class="row">
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="https://d3irk3g7luh32r.cloudfront.net/wp-content/uploads/sites/5/2017/12/20170301155447.jpg" style='width: 300px; margin:20px auto auto auto; border-radius: 10px' alt="...">
      <div class="caption">
        <h3>{{this.title}}</h3>
        <p>Click Below</p>
        <p><a href="{{this.link}}" class="btn btn-primary" role="button">Link</a> <a href="#" class="comment-btn btn btn-default" role="button">Comment</a><a href="#" class="save-btn btn btn-default" data-title="{{this.title}}" data-link="{{this.link}}" role="button">Save</a></p>
      </div>
    </div>
  </div>
</div>

{{/each}}

</ul>


<div class="modal fade" id="commentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Leave A Note On This Article</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Note:</label>
                        <input type="text" class="form-control" id="comment-text">
                    </div>                  
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="comment-button btn btn-primary">Submit</button>
            </div>
        </div>
    </div>
</div>

